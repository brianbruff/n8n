# Example n8n Configuration for Web Scraper to PDF Project

# Basic n8n settings
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=password

# Custom nodes path (if using custom nodes)
N8N_CUSTOM_EXTENSIONS=./custom-nodes

# Log level for debugging
N8N_LOG_LEVEL=info

# Webhook settings (if needed)
WEBHOOK_URL=http://localhost:5678

# File storage settings
N8N_DEFAULT_BINARY_DATA_MODE=filesystem

# Security settings
N8N_BLOCK_ENV_ACCESS_IN_NODE=false

# Puppeteer settings (for PDF generation)
PUPPETEER_CACHE_DIR=./tmp/puppeteer
PUPPETEER_EXECUTABLE_PATH=

# PDF output directory
PDF_OUTPUT_DIR=./pdfs

# Email settings (for notifications in basic workflow)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Note: Copy this file to .env and update with your actual values
# Some settings might require n8n restart to take effect